<!DOCTYPE html>
<html>
  <head>
	<% include ./partials/head %>
  </head>
  <body class="container" data-spy="scroll" data-target=".navbar" data-offset="50">
  	<header>
		<% include ./partials/header %>
	</header>
    
	<h2>In Users Page</h2>
	
	<table class="table table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Mobile No</th>
        <th> Edit/Delete</th>
      </tr>
    </thead>
    <tbody>
    	<% for(var i=0; i<users.length; i++) {%>
    		<tr>
    			<td> <%= users[i].firstName %> </td>
        		<td> <%= users[i].lastName %> </td>
       		 	<td> <%= users[i].email %> </td>
        		<td> <%= users[i].mobileNumber %> </td>
        		<td> 
        			<div class="btn-group"> 
        				<button type="button" id="editUser-<%= users[i]['_id'] %>" class="btn btn-primary">Edit</button> 
        				<button type="button" id="deleteUser-<%= users[i]['_id'] %>" class="btn btn-primary">Delete</button> 
        			</div> 
        		</td>
    		</tr>
    	<% } %>
    </tbody>
  	</table>
	
    <footer>
		<% include ./partials/footer %>
	</footer>
    
  </body>
</html>


<div id="editModalDialog" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id="editUserCloseButton" type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modify User detail</h4>
      </div>
      <div class="modal-body">
        			<div class="form-group">
				      <label for="eu-firstName">First name:</label>
				      <input type="text" class="form-control" id="eu-firstName" name="eu-firstName">
				    </div>
				    <div class="form-group">
				      <label for="eu-lastName">Last name:</label>
				      <input type="text" class="form-control" id="eu-lastName" name="eu-lastName">
				    </div>
        			<div class="form-group">
				      <label for="eu-email">Email address:</label>
				      <input type="email" class="form-control" id="eu-email" name="eu-email">
				    </div>
				    <div class="form-group">
				      <label for="eu-mobno">Mobile Number:</label>
				      <input type="text" class="form-control" id="eu-mobno" name="eu-mobno">
				    </div>
      </div>
      <div class="modal-footer">
      	<button id="editUserSubmitButton" type="button" class="btn btn-primary">Modify</button>
        <button id="editUserCancleButton" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>